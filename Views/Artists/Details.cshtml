@model MShopStyle.Models.Artist

@{
    ViewData["Title"] = "Details";
}

<head>
    <link rel="stylesheet" href="~/css/ArtistCss.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MShopStyle.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&display=swap" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display:ital@0;1&family=Oswald:wght@200..700&display=swap" rel="stylesheet">
    <style>

        .artistname {
            color: darkgoldenrod
        }

        .abouta {
            color: silver;
            text-align: center;
            font-family: "DM Serif Display", serif;
            font-weight: 400;
            font-style: italic;
            font-size: 30px;
        }

        p, span {
            color: silver;
            text-align: center;
            font-family: "DM Serif Display", serif;
            font-style: normal;
            font-size: 20px;
            color: silver;
        }

        h3 {
            color: silver;
            text-align: center;
            font-family: "DM Serif Display", serif;
            font-style: normal;
            font-size: 25px;
            color: silver;
        }

        .genre-list {
            display: inline-block;
            margin-left: 370px;
        }

        .celo {
            margin-top: 50px;
            margin-left: -30px;
        }

        .slika {
            height: 400px;
            width: 500px;
            margin-top: -10px;
        }
        
    </style>
</head>
<p class="abouta">About the Artist</p>
<div class="container celo">
    <div class="row ">
        <div class="col-md-8" >
            <h3 class="artistname">@Model.FullName</h3>
            <p></p>



            <h3>Bio:</h3>
            <p>@Model.Bio</p>

            <h3>Discography:</h3>
            <p>@Model.Discography</p>

            <h3>Awards:</h3>
            <p>@Model.Awards</p>

            <h3 class="genre-list">Genre:</h3>
            @foreach (var genre in Model.ArtistGenres)
            {
                <span> @genre.Genre.GenreName</span>
            }
            <p></p>
        </div>

        <div class="col-md-4">

            <img src="@Model.ArtistImage" alt="@Model.FullName" class=" rounded slika" />
        </div>
    </div>
</div>